server {
    listen 80;
    server_name yourdomain.com; # Замените на ваш домен

    # Редирект на HTTPS (если Cloudflare настроен на "Full" или "Full Strict")
    # Если Cloudflare в режиме "Flexible", Nginx будет слушать только 80 порт.
    # Но лучше использовать "Full" и SSL сертификат от Cloudflare (Origin CA).
    
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # Поддержка WebSocket (Socket.io)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Передача реальных IP адресов
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_cache_bypass $http_upgrade;
    }
}
